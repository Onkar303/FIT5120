@model  IEnumerable<FIT5120_Project_Refugees.Models.Sport>


@{
    ViewBag.Title = "Suggestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Suggestions.css" />

<div style="margin-top:60px;" class="suggestionImg">

    <div class="headertitle">
        <div class="title-word">Get </div>
        <div class="title-word">A Sport</div>
        <div class="title-word">Suggestion</div>
    </div>
</div>


<hr />

<div>
    <div class="suggestionGrid">

        @foreach (var item in Model)
        {


        <div style=" background-image:url('../../Images/SportImages/@(item.SPORT_NAME).jpg');background-repeat:no-repeat;background-position:center;background-size:cover; width:100%;height:300px;">

            <div style="display:flex;justify-content:center;align-items:center; width:100%; height:100%;margin:auto;background-color:black;opacity:0.6;">

                <div style="text-align:center;color:white;">
                    @Html.ActionLink(@item.SPORT_NAME, "SportsInformation/" + item.SPORT_ID.ToString(), "Home", null, new { @style = "text-decoration:none;font-size:50px;color:white;cursor:pointer;dsiplay:block;" })
                    <h4>
                        @Html.ActionLink("Learn more", "SportsInformation/" + item.SPORT_ID.ToString(), "Home", null, new { @style = "text-decoration:underline;color:white;cursor:pointer;dsiplay:block;" })
                    </h4>
                </div>

               
            </div>
        </div>
        }

    </div>

</div>

<div style="text-align:center;font-size:20px;">
    <p> If you want more suggestions , click on the 'Recommendation' button and get new sports </p>
</div>

<div style="display:flex;justify-content:center;padding:3% 3% 1% 3%;">
    @Html.ActionLink("Recommend", "Suggestions", "Home", htmlAttributes: new { @class = "button" })
</div>



