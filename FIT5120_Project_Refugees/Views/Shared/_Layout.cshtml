<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#f2f2f2; box-shadow:0px 5px 22px 1px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>



            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Application name", "Index", "Home", new { @class = "navbar-brand" })</li>*@
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @style = "color:black;font-weight:bold;" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { @style = "color:black;font-weight:bold;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { @style = "color:black;font-weight:bold;" })</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.ActionLink("Play With Refugees", "Index", "Home", new { @style = "color:black;font-weight:bold;" }) </li>
                </ul>

                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="">
        @RenderBody()
        <hr />
        <footer class="container body-content">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>
